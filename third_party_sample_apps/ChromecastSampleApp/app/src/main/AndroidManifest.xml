<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ooyala.chromecastsampleapp">

    <application
        android:icon="@drawable/ic_ooyala"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.ooyala.chromecastsampleapp.PlayerStartingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" android:textColor="#ffffff"
            android:parentActivityName="com.ooyala.chromecastsampleapp.ChromecastSampleAppActivity"
            android:launchMode="singleInstance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ooyala.chromecastsampleapp.ChromecastSampleAppActivity"/>
        </activity>
        <activity android:name="com.ooyala.chromecastsampleapp.ChromecastSampleAppActivity"
                  android:label="@string/app_name" android:textColor="#ffffff">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.ooyala.android.castsdk.OOBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" > </action>
            </intent-filter>
        </receiver>
    </application>
</manifest>
