<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="VoTitleStyle" parent="android:Theme">
        <item name="android:windowTitleSize">30dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
    <style name="style_player_textview_label">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#3F3F3F</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    
     <style name="style_player_textview_general_highlight">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">italic</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#3F3F3F</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    
    <style name="style_player_textview_general">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#3F3F3F</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    
    <style name="style_player_textview_general_selector">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@drawable/selector_fontcolor_general</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#3F3F3F</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="Dialog_Fullscreen"> 
       <item name="android:windowFullscreen">true</item> 
       <item name="android:windowNoTitle">true</item>  
    </style>

</resources>