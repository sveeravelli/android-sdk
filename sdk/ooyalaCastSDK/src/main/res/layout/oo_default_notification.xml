<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <ImageView
        android:id="@+id/OOIconView"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/OORemoveView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_av_close_sm_dark"/>

    <ImageView
        android:id="@+id/OOPlayPauseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/OORemoveView"
        android:layout_centerVertical="true"/>
    
    <TextView
        android:id="@+id/OOTitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/OOIconView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/OOPlayPauseView"
        android:layout_toRightOf="@+id/OOIconView"
        android:ellipsize="marquee"
        android:textColor="#FFFFFF"
        android:fadingEdge="horizontal"
        android:textAppearance="@style/android:TextAppearance.StatusBar.EventContent.Title"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/OOSubtitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/OOIconView"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/OOPlayPauseView"
        android:layout_toRightOf="@+id/OOIconView"
        android:ellipsize="marquee"
        android:textColor="#FFFFFF"
        android:fadingEdge="horizontal"
        android:textAppearance="@style/android:TextAppearance.StatusBar.EventContent"
        android:maxLines="1"/>

</RelativeLayout>