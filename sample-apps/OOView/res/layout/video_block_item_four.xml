<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_thumb_webviewFull"
        android:orientation="vertical"
        android:padding="2dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
            android:id="@+id/row1"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
                android:id="@+id/v1"
                android:layout_marginRight="2dp"
                android:padding="4dp"

                android:background="@drawable/round_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/video_thumb_webview1"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <com.ooyala.demo.widget.TransparentPanel
                    android:id="@+id/tp1"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.ooyala.demo.widget.VideoTitleText
                        android:id="@+id/video_1_title"
                        android:ellipsize="end"
                        android:singleLine="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </com.ooyala.demo.widget.TransparentPanel>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/v2"
                android:layout_marginLeft="2dp"
                android:padding="4dp"

                android:background="@drawable/round_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/video_thumb_webview2"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <com.ooyala.demo.widget.TransparentPanel
                    android:id="@+id/tp2"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.ooyala.demo.widget.VideoTitleText
                        android:id="@+id/video_2_title"
                        android:ellipsize="end"
                        android:singleLine="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </com.ooyala.demo.widget.TransparentPanel>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/row2"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/v3"
                android:background="@drawable/round_shape"
                android:padding="4dp"

                android:layout_marginRight="2dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/video_thumb_webview3"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <com.ooyala.demo.widget.TransparentPanel
                    android:id="@+id/tp3"
                    android:orientation="vertical"
                    android:padding="5dp"

                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.ooyala.demo.widget.VideoTitleText
                        android:id="@+id/video_3_title"
                        android:ellipsize="end"
                        android:singleLine="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </com.ooyala.demo.widget.TransparentPanel>

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/v4"
                android:background="@drawable/round_shape"
                android:layout_marginLeft="2dp"

                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/video_thumb_webview4"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <com.ooyala.demo.widget.TransparentPanel
                    android:id="@+id/tp4"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.ooyala.demo.widget.VideoTitleText
                        android:id="@+id/video_4_title"
                        android:ellipsize="end"
                        android:singleLine="true"

                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </com.ooyala.demo.widget.TransparentPanel>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>