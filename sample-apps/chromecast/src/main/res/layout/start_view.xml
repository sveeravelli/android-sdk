<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ooyala.android.castsdk.OODefaultMiniController
        android:id="@+id/miniController1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow7"
        android:visibility="gone" >
    </com.ooyala.android.castsdk.OODefaultMiniController>
    
    <ListView android:id="@+id/listView"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"/>
    
    <com.ooyala.ooyalachromecastsampleapp.CustomizedMiniController
        android:id="@+id/miniController2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow7"
        android:visibility="gone" >
    </com.ooyala.ooyalachromecastsampleapp.CustomizedMiniController>
    
    
</LinearLayout>
